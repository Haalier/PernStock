{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "bundler",
    "types": [],
    "esModuleInterop": true,
  
    "sourceMap": true,
   
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
